@model GiftsSystem.Web.ViewModels.ShoppingCart.CreatePaymentInfoViewModel

@using (Html.BeginForm("Pay", "ShoppingCart", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    
    <fieldset>
        <legend>Payment information</legend>
        @Html.EditorFor(model=>model.FirstName)
        @Html.EditorFor(model => model.LastName)
        @Html.EditorFor(model => model.City)
        @Html.EditorFor(model => model.Address)
        <div class="form-group">
            @Html.LabelFor(model => model.RegionName, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">             
                @Html.DropDownListFor(model => model.RegionName, Model.Regions, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CountryName, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.DropDownListFor(model => model.CountryName, Model.Countries, new { @class = "form-control" })
            </div>
        </div>
       @Html.Display("", "SubmitAndCancleBtns");
    </fieldset>
}