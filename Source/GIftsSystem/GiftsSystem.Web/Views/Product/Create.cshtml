@model GiftsSystem.Web.ViewModels.Product.CreateProductViewModel
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <fieldset>
        <legend>Create Product</legend>
        @Html.EditorFor(model=>model.Name)
        @Html.EditorFor(model=>model.Description)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryId, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @*@Html.DropDownListFor(model => model.CategoryId, ViewBag.CategoriesForDr as List<SelectListItem>, new { @class="form-control" })*@
                @Html.DropDownListFor(model => model.CategoryId, Model.Categories, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Price, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Price, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Quantity, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ExpirationDate, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.ExpirationDate, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Image, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                <input name="image" type="file" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
}

